<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/administrator/components/com_gtsafetravel/models/fields">
	<fields>
		<fieldset name="item">
			<field name="id"
				type="althidden"
				readonly="true"
			/>
			<field name="old_id"
				type="althidden"
				readonly="true"
			/>
			<field name="old_id"
				type="althidden"
				readonly="true"
			/>
			<field name="username"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_USERNAME"
				description="COM_GTSAFETRAVEL_FIELD_USERNAME_DESC"
			/>
			<field name="password"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_PASSWORD"
				description="COM_GTSAFETRAVEL_FIELD_PASSWORD_DESC"
			/>
			<field name="identity_number"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_IDENTITY_NUMBER"
				description="COM_GTSAFETRAVEL_FIELD_IDENTITY_NUMBER_DESC"
			/>
			<field name="full_name"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_FULL_NAME"
				description="COM_GTSAFETRAVEL_FIELD_FULL_NAME_DESC"
			/>
			<field name="email"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_EMAIL"
				description="COM_GTSAFETRAVEL_FIELD_EMAIL_DESC"
			/>
			<field name="phone"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_PHONE"
				description="COM_GTSAFETRAVEL_FIELD_PHONE_DESC"
			/>
			<field name="position"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_POSITION"
				description="COM_GTSAFETRAVEL_FIELD_POSITION_DESC"
			/>
			<field name="department"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_DEPARTMENT"
				description="COM_GTSAFETRAVEL_FIELD_DEPARTMENT_DESC"
			/>
			<field name="division"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_DIVISION"
				description="COM_GTSAFETRAVEL_FIELD_DIVISION_DESC"
			/>
			<field name="country_id"
				type="textarea"
				required="false"
				query="SELECT id, name FROM #__sys_user WHERE id IN (%s) ORDER BY name"
				task="selectize.getItem"
				requests="{table: 'sys_user'}"
				wheres="published = 1"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_COUNTRY_ID"
				description="COM_GTSAFETRAVEL_FIELD_COUNTRY_ID_DESC"
			/>
			<field name="embassy_id"
				type="textarea"
				required="false"
				query="SELECT id, name FROM #__sys_user WHERE id IN (%s) ORDER BY name"
				task="selectize.getItem"
				requests="{table: 'sys_user'}"
				wheres="published = 1"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_EMBASSY_ID"
				description="COM_GTSAFETRAVEL_FIELD_EMBASSY_ID_DESC"
			/>
			<field name="online"
				type="text"
				filter="numeric"
				required="false"
				label="COM_GTSAFETRAVEL_FIELD_ONLINE"
				description="COM_GTSAFETRAVEL_FIELD_ONLINE_DESC"
			/>
			<field name="last_login"
				type="text"
				readonly="true"
				required="false"
				label="COM_GTSAFETRAVEL_FIELD_LAST_LOGIN"
				description="COM_GTSAFETRAVEL_FIELD_LAST_LOGIN_DESC"
			/>
			<field name="last_online"
				type="text"
				readonly="true"
				required="false"
				label="COM_GTSAFETRAVEL_FIELD_LAST_ONLINE"
				description="COM_GTSAFETRAVEL_FIELD_LAST_ONLINE_DESC"
			/>
			<field name="ip_address"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_IP_ADDRESS"
				description="COM_GTSAFETRAVEL_FIELD_IP_ADDRESS_DESC"
			/>
		</fieldset>
	</fields>
</form>