<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/administrator/components/com_gtsafetravel/models/fields">
	<fields>
		<fieldset name="item">
			<field name="id"
				type="althidden"
				readonly="true"
			/>
			<field name="old_id"
				type="althidden"
				readonly="true"
			/>
			<field name="code"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_CODE"
				description="COM_GTSAFETRAVEL_FIELD_CODE_DESC"
				align="center"
				width="80px"
			/>
			<field name="country_id"
				type="textarea"
				required="false"
				query="SELECT id, name FROM #__ref_embassy WHERE id IN (%s) ORDER BY name"
				task="selectize.getItem"
				requests="{table: 'ref_embassy'}"
				wheres="published = 1"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_COUNTRY_ID"
				description="COM_GTSAFETRAVEL_FIELD_COUNTRY_ID_DESC"
			/>
			<field name="name"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_NAME"
				description="COM_GTSAFETRAVEL_FIELD_NAME_DESC"
			/>
			<field name="address"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_ADDRESS"
				description="COM_GTSAFETRAVEL_FIELD_ADDRESS_DESC"
			/>
			<field name="website"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_WEBSITE"
				description="COM_GTSAFETRAVEL_FIELD_WEBSITE_DESC"
			/>
			<field name="email"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_EMAIL"
				description="COM_GTSAFETRAVEL_FIELD_EMAIL_DESC"
			/>
			<field name="telp"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_TELP"
				description="COM_GTSAFETRAVEL_FIELD_TELP_DESC"
			/>
			<field name="fax"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_FAX"
				description="COM_GTSAFETRAVEL_FIELD_FAX_DESC"
			/>
			<field name="hotline"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_HOTLINE"
				description="COM_GTSAFETRAVEL_FIELD_HOTLINE_DESC"
			/>
			<field name="transport"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_TRANSPORT"
				description="COM_GTSAFETRAVEL_FIELD_TRANSPORT_DESC"
			/>
			<field name="area"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_AREA"
				description="COM_GTSAFETRAVEL_FIELD_AREA_DESC"
			/>
			<field name="latitude"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_LATITUDE"
				description="COM_GTSAFETRAVEL_FIELD_LATITUDE_DESC"
			/>
			<field name="longitude"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_LONGITUDE"
				description="COM_GTSAFETRAVEL_FIELD_LONGITUDE_DESC"
			/>
			<field name="city"
				type="text"
				readonly="true"
				filter="string"
				required="false"
				class="input-medium"
				label="COM_GTSAFETRAVEL_FIELD_CITY"
				description="COM_GTSAFETRAVEL_FIELD_CITY_DESC"
			/>
			<field name="image_path"
				type="textarea"
				required="false"
				rows="3"
				class="input-xxlarge"
				label="COM_GTSAFETRAVEL_FIELD_IMAGE_PATH"
				description="COM_GTSAFETRAVEL_FIELD_IMAGE_PATH_DESC"
			/>
		</fieldset>
	</fields>
</form>